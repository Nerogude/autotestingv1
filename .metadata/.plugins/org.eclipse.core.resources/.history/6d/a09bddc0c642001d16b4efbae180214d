package pageObjects;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;

public class ShopContentPanel {
	
	public WebDriver driver;
	
	By continueShoppingBtn = By.cssSelector(".btn.btn-secondary");
	By CheckoutBtn = By.xpath("/html//div[@id='blockcart-modal']/div[@role='document']/div[@class='modal-content']//a[@href='//teststore.automationtesting.co.uk/cart?action=show']");
	
	public ShopContentPanel(WebDriver driver) {
		this.driver=driver;
	}
	public WebElement getContinueShoppingBtn() {
		return driver.findElement(continueShoppingBtn);
	}
	public WebElement getCheckoutButton() {
		return driver.findElement(CheckoutBtn);
	}

}
