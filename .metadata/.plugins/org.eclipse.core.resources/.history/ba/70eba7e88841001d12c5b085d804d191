import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;



public class DatePicker {
	
	
	
	
	

	public static void main(String[] args) throws InterruptedException {
		
		String Month = "May 2023";
		String day = "13";
		System.setProperty("webdriver.chrome.driver", System.getProperty("user.dir")+"\\src\\Drivers\\chromedriver.exe");
		WebDriver driver = new ChromeDriver();
		driver.get("https://www.automationtesting.co.uk/datepicker.html");
		driver.findElement(By.cssSelector("input#basicDate")).click();
		
		Thread.sleep(2000);
		String MonthYear = driver.findElement(By.cssSelector(".animate.arrowTop.flatpickr-calendar.hasTime  .flatpickr-current-month")).getText();
		
		while(true) 
		{
			if(MonthYear.equals(Month))
			{
				break;
			} 
			else 
			{
				driver.findElement(By.cssSelector("body [tabindex='-1']:nth-child(11) .flatpickr-next-month [version]")).click();
			}
			
		}
		
		driver.findElement(By.xpath("//body/div[2]/div[2]/div[1]/div[2]/div[1]/span[contains(text(),\"20\")]")).click();
	}

}
